@using BulkyBookWeb.Models
@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary ">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary"><i class="bi bi-clipboard-plus"></i>&nbsp;Create New User</a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table table-striped">
        <thead>
            <tr>
                <th>
                    User Name
                </th> 
                <th>
                    Department
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td with="50%">
                        @obj.Name
                    </td>
                    <td with="50%">                      
                        @obj.Departments.Name 
                    </td> 
                    <td with="50%">
                        @obj.Status                        
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>